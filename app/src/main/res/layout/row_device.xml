<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7">
        <TextView
            android:text="@string/device_label"
            android:id="@+id/txtDeviceLabel"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/list_padding_top"
            android:paddingLeft="@dimen/list_padding_left"
            android:textAppearance="@style/textBold"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/last_online_label"
            android:paddingTop="@dimen/list_padding_top"
            android:paddingLeft="@dimen/list_padding_left"
            android:textAppearance="@style/textBold"
            android:id="@+id/txtOnlineDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">
        <TextView

            android:id="@+id/txtDevice"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/list_padding_top"
            android:textAppearance="@style/textNormal"
            android:layout_height="wrap_content" />
        <TextView

            android:paddingTop="@dimen/list_padding_top"
            android:id="@+id/txtOnlineDate"
            android:textAppearance="@style/textNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>